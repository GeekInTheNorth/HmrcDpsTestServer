@model TestProxy.Models.Dataset.DatasetUploadModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Upload", "Dataset", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Dataset Name:")
        @Html.Label(Model.DatasetBeingModified, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Message Type:")
        @Html.DropDownList(Model.MessageType, Model.MessageTypes, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Data File:")
        <input type="file" name="file" id="file" />
    </div>
    <div>
        <button type="submit" class="btn btn-success">Save</button>
        @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-warning" })
    </div>
}
@if (Model.ShowValidationError)
{
    <br />
    <div class="alert alert-warning alert-dismissable">
        @Model.ValidationError
    </div>
}